<%= render template: "shared/nav_bar" %>

<div class="container enter">
	<h2>Sign Up for Trans.it</h2>
	<div class="form">
		<form method="POST" action="/users"><br>
			<div class="row">
				<div class="col-xs-2 col-sm-3 col-md-3 col-lg-3"></div>
				<label class="col-xs-3 col-sm-2 col-md-2 col-lg-2">Username:</label>
				<input class="col-xs-4 col-sm-3 col-md-3 col-lg-3 name" type="text" name="user_name" >
			</div>
			<div class="row">
				<div class="col-xs-2 col-sm-3 col-md-3 col-lg-3"></div>
				<label class="col-xs-3 col-sm-2 col-md-2 col-lg-2">Email:</label>
				<input class="col-xs-4 col-sm-3 col-md-3 col-lg-3 email"type="text" name="email">
			</div>
			<div class="row">
				<div class="col-xs-2 col-sm-3 col-md-3 col-lg-3"></div>
				<label class="col-xs-3 col-sm-2 col-md-2 col-lg-2">Password:</label>
				<input class="col-xs-4 col-sm-3 col-md-3 col-lg-3 password" type="password" name="password">
			</div>
			<div class="row">
				<div class="col-xs-2 col-sm-3 col-md-3 col-lg-3"></div>
				<label class="col-xs-3 col-sm-2 col-md-2 col-lg-2">Confrim Password:</label>
				<input class="col-xs-4 col-sm-3 col-md-3 col-lg-3password" type="password" name="password_confirmation">
			</div>
			<input name="authenticity_token" value="<%= form_authenticity_token() %>" type="hidden">
			<div class="row">
				<div class="col-xs-2 col-sm-3 col-md-3 col-lg-3"></div>
				<button class="col-xs-7 col-sm-5 col-md-5 col-lg-5 login btn btn-primary">Login</button>
			</div>
		</form>
	</div><!-- end form div -->
</div>