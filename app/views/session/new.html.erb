

<%= render template: "shared/nav_bar" %>

<div class="container enter">
	<h2>Login to Trans.it</h2>
	<% if @error %>
		<p style='color: red;'>Incorrect email/password</p>
		<p>Please try again</p>
	<% end %>
	<% if @signed_up %>
		<p> Thank you for signing up with Trans.it!<br>
 		Please login to your account</p>
<% end %>
	<div class="form">
		<form method="POST" action="/sessions"><br>
			<div class="row">
				<label class="col-md-offset-3 col-lg-offset-3 col-xs-6 col-sm-6 col-md-3 col-lg-3 label">Username:</label>
				<input class="col-xs-6 col-sm-6 col-md-4 col-lg-4 name" type="text" name="user_name" >
			</div>
			<div class="row">
				<label class="col-md-offset-3 col-lg-offset-3 col-xs-6 col-sm-6 col-md-3 col-lg-3 label">Email:</label>
				<input class="col-xs-6 col-sm-6 col-md-4 col-lg-4 email"type="text" name="email">
			</div>
			<div class="row">
				<label class="col-md-offset-3 col-lg-offset-3 col-xs-6 col-sm-6 col-md-3 col-lg-3 label">Password:</label>
				<input class="col-xs-6 col-sm-6 col-md-4 col-lg-4 password" type="password" name="password">
			</div>
			
			<input name="authenticity_token" value="<%= form_authenticity_token() %>" type="hidden">
			
			<div class="row">
				<button class="col-md-offset-3 col-lg-offset-3 col-xs-12 col-sm-12 col-md-7 col-lg-7 login btn btn-primary">Login</button>
			</div>
		</form>
	</div><!-- end form div -->
</div><!-- end container -->